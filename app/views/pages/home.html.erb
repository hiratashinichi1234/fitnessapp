<div class="container mt-5 text-center">
<h1>スケジュール管理</h1>
<p>こちらでスケジュール管理できます。</p>
<%= month_calendar(events: @scadules) do |date, scadules| %>
<%= date %>
<% scadules.each do |scadule| %>
<div class="card-header">
<h5 class="card-title">
 <%= link_to scadule.title, scadule %>
</h5>
</div>
<div class="card-body">
<p class="card-text">
<% scadule.description %>
</p>
</div>
<div class="card-footer">
<p class="card-text">
 Form: <%= scadule.start_time.strftime('%A, %B %d, %Y at %I:%M %p') %>
</p>
<p class="card-text">
 Form: <%= scadule.end_time.strftime('%A, %B %d, %Y at %I:%M %p') %>
</p>
</div>
<%end%>
<%end%>
</div>