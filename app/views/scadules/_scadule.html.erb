<div id="<%= dom_id scadule %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= scadule.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= scadule.description %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Start time:</strong>
    <%= scadule.start_time %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">End time:</strong>
    <%= scadule.end_time %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this scadule", scadule, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this scadule", edit_scadule_path(scadule), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
